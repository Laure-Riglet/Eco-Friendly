{% extends 'base.html.twig' %}

{% block title %}Modifier un quiz | Eco-Friendly{% endblock %}

{% block body %}

    <div class="container-fluid col-12 col-lg-8 mx-auto">
    <h1>
        Modifier le quiz<br />
        "{{ quiz.question }}"
    </h1>
    <div>
        <div class="row mb-3">
            <div class="col-6">
                <span>Cr&eacute;&eacute;e le {{ quiz.createdAt|date('d/m/Y') }}</span>
            </div>
            <div class="col-6 d-flex justify-content-end">
                Statut :&nbsp;&nbsp;
                {% include "_fragments/_content_status_tag.html.twig" with {status:quiz.status} %}
            </div>
        </div>
        {{ include('quiz/_form.html.twig', {'button_label': 'Valider'}) }}
        {{ include('quiz/_delete_form.html.twig') }}
    </div>
    <a href="{{ path('bo_articles_show', {id:quiz.article.id}) }}">Retour à l'article associé</a>
    </div>

{% endblock %}
