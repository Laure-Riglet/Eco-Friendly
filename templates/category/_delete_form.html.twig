<form 
    method="post" 
    action="{{ path('bo_categories_deactivate', {'id': category.id}) }}" 
    onsubmit="return confirm('Êtes-vous sûr de vouloir désactiver cette catégorie ?');"
    class="d-flex justify-content-start align-items-center"
>
    <input 
        type="hidden" 
        name="_token" 
        value="{{ csrf_token('deactivate' ~ category.id) }}"
    >
    <button 
        type="submit"
        class="btn btn-danger my-2"
    >
            Désactiver
    </button>
</form>
